        <Image Name="SlotImage_2" Stretch="Fill"  Width="130" Height="180" Canvas.Left="454" Canvas.Top="317"/>
        <Image Name="EmptySlot2" Stretch="Fill" Source="/Assets/Images/UI Elements/Game Menu/SlotEmpty.png" Width="70" Height="70" Canvas.Left="484" Canvas.Top="372" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

