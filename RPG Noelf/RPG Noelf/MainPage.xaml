<Page
    x:Class="RPG_Noelf.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RPG_Noelf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Page.Resources>
        <Storyboard x:Name="myStoryboard">
            <DoubleAnimation From="1" To="6" Duration="00:00:6" 
            Storyboard.TargetName="rectScaleTransform" 
            Storyboard.TargetProperty="ScaleY">
                <DoubleAnimation.EasingFunction>
                    <BounceEase Bounces="2" EasingMode="EaseOut" 
                            Bounciness="2" />
                </DoubleAnimation.EasingFunction>
                <!--<DoubleAnimationUsingKeyFrames Storyboard.TargetName="rectScaleTransform"
                                            Storyboard.TargetProperty="(RenderTransform).(SkewTransform.AngleX)">
                <LinearDoubleKeyFrame Value="0" KeyTime="0:0:0"/>
                <LinearDoubleKeyFrame Value="45" KeyTime="0:0:4"/>-->
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Button FontSize="48px" Name="MakeHappen" Content="Eyes" HorizontalAlignment="Left" Margin="244,380,0,0" VerticalAlignment="Top" Height="132" Width="293" Click="MakeHappen_Click"/>
        <Canvas Name="Personagem"  HorizontalAlignment="Left" Height="197" Margin="1200,317,0,0" VerticalAlignment="Top" Width="202" ManipulationMode="System">
            <Image Name="Head" HorizontalAlignment="Left" Height="197" Margin="0,0,0,0" VerticalAlignment="Top" Width="202" Source="/Assets/Images/000---.png"/>
            <Image  HorizontalAlignment="Left" Height="197" Margin="0,0,0,0" VerticalAlignment="Top" Width="202" Source="/Assets/Images/00-0--.png"/>
        </Canvas>
        <Image Name="RenderedImage" HorizontalAlignment="Left" Height="197" Margin="813,335,0,0" VerticalAlignment="Top" Width="202"/>

        <!-- Button that begins animation. -->
        <Button Click="Animation_Begin"
         Margin="391,604,0,0" Content="Begin" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <!-- Button that pauses Animation. -->
        <Button Click="Animation_Pause"
         Margin="694,604,0,0" Content="Pause" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <!-- Button that resumes Animation. -->
        <Button Click="Animation_Resume"
         Margin="582,604,0,0" Content="Resume" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <!-- Button that stops Animation. Stopping the animation 
         returns the ellipse to its original location. -->
        <Button Click="Animation_Stop"
         Margin="488,604,0,0" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <Rectangle Fill="Blue" Width="200" Height="30">
            <Rectangle.RenderTransform>
                <ScaleTransform x:Name="rectScaleTransform" />
            </Rectangle.RenderTransform>
        </Rectangle>

        <!--<Rectangle x:Name="MyRectangle"
                   PointerPressed="MyRectangle_PointerPressed"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Height="100" Width="100"
                   Margin="430,230,0,0"
                   Fill="#FFFF4109"/>-->
    </Grid>
</Page>
